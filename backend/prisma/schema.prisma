generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TypeEnum {
  FIRE
  WATER
  GRASS
  ELECTRIC
  PSYCHIC
  FIGHTING
  COLORLESS
  METAL
  DARK
  DRAGON
  FAIRY
}

enum EvolutionEnum {
  BASIC
  STAGE1
  STAGE2
}

enum RarityEnum {
  COMMON
  UNCOMMON
  RARE
}

model Card {
  id              Int      @id @default(autoincrement())
  name            String
  pokemonType     TypeEnum
  evolutionType   EvolutionEnum

  /// [AttackType]
  attack         Json

  hitPoints       Int
  
  /// [WeaknessType]
  weakness        Json
  
  /// [ResistanceType]
  resistance      Json?
  
  rarity          RarityEnum
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}